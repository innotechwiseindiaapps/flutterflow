rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /User_Collection/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /Info/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /Info/{parent}/skills/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/skills/{document} {
      allow read: if true;
    }

  }
}
